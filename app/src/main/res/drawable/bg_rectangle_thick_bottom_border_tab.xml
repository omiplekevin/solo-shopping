<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <stroke
                android:width="@dimen/dimen_10"
                android:color="#000000" />
            <corners android:radius="@dimen/dimen_10"/>
        </shape>
    </item>
    <item android:top="5dp" android:bottom="10dp" android:start="5dp" android:end="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_10"/>
            <solid android:color="#FFFFFF" /> <!-- Lighter color for the top half -->
        </shape>
    </item>
    <item android:top="5dp" android:start="5dp" android:end="5dp"
        android:height="100dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/dimen_10"
                android:topRightRadius="@dimen/dimen_10"/>
            <solid android:color="@color/orange_1" /> <!-- Lighter color for the top half -->
        </shape>
    </item>
</layer-list>
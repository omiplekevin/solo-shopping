<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShopCartBadge" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:background">@drawable/bg_badge</item>
    </style>

    <style name="ShopPageLabel" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ShopChipFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="checkedIcon">@drawable/close</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="ShopItemCategory" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:layout_marginStart">@dimen/dimen_15</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
    </style>

    <style name="ShopItemName" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ShopItemPrice" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="ShopPromptMessage" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:background">@drawable/bg_rectangle_thick_bottom_border</item>
        <item name="android:padding">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="ShopInCartTotal" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ShopInCartBuy" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="drawableEndCompat">@drawable/ic_chevron</item>
        <item name="android:paddingLeft">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_15</item>
        <item name="android:paddingBottom">@dimen/dimen_15</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ShopInCartItem" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="color">@color/black</item>
        <item name="android:maxEms">10</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShopInCartItemPrice" parent="ShopInCartItem">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="ShopActionDismiss" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/bg_oval_thick_bottom_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/close</item>
    </style>

    <style name="ShopFormField" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:background">@drawable/bg_form_input</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
    </style>

    <style name="ShopFormFieldEmail" parent="ShopFormField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="ShopSwitch" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="ShopPayButton" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/dimen_15</item>
    </style>

    <style name="ShopOrderSummary" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_rectangle_thick_bottom_border_tab</item>
    </style>

    <style name="ShopLabelOrderProcessed" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ShopLabelOrderID" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShopReturnToProducts" parent="Base.Theme.SOLOShoppingCart">
        <item name="android:background">@drawable/bg_btn_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_30</item>
    </style>

</resources>